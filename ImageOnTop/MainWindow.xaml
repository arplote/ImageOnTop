<Window x:Class="ImageOnTop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageOnTop"
        mc:Ignorable="d"
        Topmost="True" WindowStyle="None" Background="White" ShowInTaskbar="True" AllowsTransparency="True"
        
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        MouseWheel="Window_MouseWheel"
        MouseDoubleClick="Window_MouseDoubleClick">
    <Border BorderBrush="LightGray"  BorderThickness="1">
        <Grid MouseMove="Grid_MouseMove" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseRightButtonDown="Grid_MouseRightButtonDown">
            <Label Content="" HorizontalAlignment="Left" Width="4000" Height="3000" Margin="0,0,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Window>
